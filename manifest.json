{
    "manifest_version": 2,
    "name": "Slash to search",
    "version": "0.0.2.4",
    "permissions": [
        "<all_urls>",
        "storage",
        "tabs"
    ],
    "background": {
        "page": "background-scripts/background.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-scripts/contentScript.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup/popup.html"
    },
    "web_accessible_resources": [
        "helpers.js"
    ]
  }
