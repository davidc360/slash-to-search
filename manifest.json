{
    "manifest_version": 2,
    "name": "Slash to search",
    "version": "0.0.0.1",
    "description": "Press / to focus on the search bar.",
    "permissions": [
        "<all_urls>",
        "storage",
        "tabs"
    ],
    "background": {
        "scripts": [
            "oninstall.js",
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    }
  }